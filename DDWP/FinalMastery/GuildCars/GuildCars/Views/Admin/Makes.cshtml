
@{
    ViewBag.Title = "Makes";
}

<h2>Makes</h2>

<div class="container">
    <div class="col-lg-12 fields">
        <form class="form-horizontal" role="form" id="used-form">
            <div class="form-group col-md-5">
                <label for="new-make" class="col-md-2 control-label">
                    New Make:
                </label>
                <input type="text"
                       class="form-control"
                       id="add-new-make"
                       placeholder="" required></input>
                
            </div>
            <div class="col-md-4">
            <a href="#" class="button1">Save</a>
            </div>
        </form>
       
    </div>
    <div id="userTableDiv" class="col-md-6">
        <table id="userTable" class="table table-hover">
            <tr>
                <th width="20%">Make</th>
                <th width="30%">Date Added</th>
                <th width="50%">User</th>
            </tr>
            <!--
         #3: This holds the list of contacts - we will add rows
        dynamically
         using jQuery
         -->
            <tbody id="contentRows"></tbody>
        </table>
        
    </div>
</div>

