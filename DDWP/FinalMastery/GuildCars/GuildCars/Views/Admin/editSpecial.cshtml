@model IEnumerable<GuildCars.Models.Tables.Special>
@{
    ViewBag.Title = "editSpecial";
}

<h2>Specials</h2>

<div class="container">
    <div class="col-lg-12 fields">
        @using (Html.BeginForm())
        { 
            <div class="form-group">
                <label for="add-title" class="col-md-2 control-label">
                    Title:
                </label>
                <div class="col-md-10">
                    <input type="text"
                           class="form-control"
                           id="add-title"
                           placeholder="Title" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label for="add-description" class="col-md-2 control-label">
                    Description:
                </label>
                <div class="col-md-10">
                    <textarea class="form-control"
                              id="add-description"
                              placeholder="Description" required></textarea>
                </div>
            </div>
            <button class="button1">Save</button>
            <br />
        }
    </div>
</div>
<br />

@foreach (var item in Model)
{<div class="container">
        <div class="col-lg-12 fields">
            <div class="col-md-2">
                <img src="/images/OzCoin.jpg" alt="Oohh shiny" style="width:100px;height:100px" />
            </div>
            <div class="col-md-10">
                <h4>@item.SpecialName</h4>
                <p>
                    @item.SpecialText
                </p>
            </div>
        </div>
    </div>
    <br />
}
