
@{
    ViewBag.Title = "addVehicle";

}

@*TODO: ADD AJAX CALL  - populate model list based on selected make *@

<h2>Add Vehicle</h2>

<div class="container">
    <form class="form-vertical" role="form" id="add-form">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">

                    <label for="add-make" class="col-md-2 control-label">
                        Make:
                    </label>
                    <div class="col-md-10">
                        <select name="make">
                            <option value="kia">Kia</option>
                            <option value="subaru">Subaru</option>
                            <option value="honda" selected>Honda</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-model" class="col-md-2 control-label">
                        Model:
                    </label>
                    <div class="col-md-10">
                        <select name="model">
                            <option value="accord">Accord</option>
                            <option value="civic">Civic</option>
                            <option value="forester">Forester</option>
                            <option value="soul">Soul</option>
                            <option value="A6">A6</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-type" class="col-md-2 control-label">
                        Type:
                    </label>
                    <div class="col-md-10">
                        <select name="type">
                            <option value="new">New</option>
                            <option value="used">Used</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-body" class="col-md-2 control-label">
                        Body Type:
                    </label>
                    <div class="col-md-10">
                        <select name="body">
                            <option value="suv">SUV</option>
                            <option value="sedan">Sedan</option>
                            <option value="truck">Truck</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-year" class="col-md-2 control-label">
                        Year:
                    </label>
                    <div class="col-md-10">
                        <input type="number"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-trans" class="col-md-2 control-label">
                        Transmisson:
                    </label>
                    <div class="col-md-10">
                        <select name="type">
                            <option value="manual">Manual</option>
                            <option value="automatic">Automatic</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-ext-color" class="col-md-2 control-label">
                        Color:
                    </label>
                    <div class="col-md-10">
                        <input type="text"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-int-color" class="col-md-2 control-label">
                        Interior Color:
                    </label>
                    <div class="col-md-10">
                        <input type="text"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-mileage" class="col-md-2 control-label">
                        Mileage:
                    </label>
                    <div class="col-md-10">
                        <input type="number"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-vin" class="col-md-2 control-label">
                        VIN #:
                    </label>
                    <div class="col-md-10">
                        <input type="text"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-msrp" class="col-md-2 control-label">
                        MSRP:
                    </label>
                    <div class="col-md-10">
                        <input type="number"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="add-price" class="col-md-2 control-label">
                        Price:
                    </label>
                    <div class="col-md-10">
                        <input type="number"
                               class="form-control"
                               id="add-description"
                               placeholder="" required>
                    </div>
                </div>
            </div>
        </div>
        <br />


        <div class="row">
            <div class="form-group">
                <label for="add-description" class="col-md-2 control-label">
                    Description:
                </label>
                <div class="col-md-10">
                    <textarea class="form-control"
                              width="400px"
                              height="300px"
                              id="add-description"
                              placeholder="Description" required></textarea>
                </div>
            </div>
        </div>
        <br />



        <div class="row">
            <div class="col-md-2">
                <label for="add-picture" class="col-md-2 control-label">
                    Picture:
                </label>
                <div class="col-md-10">
                    <input type="file" name="pic" accept="image/*">
                </div>
            </div>
        </div>
        <br />

        <a href="#@*append to Specials*@" class="button1">Save</a>
        <br />
    </form>
</div>